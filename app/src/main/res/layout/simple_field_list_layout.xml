<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/four_dp"
    android:background="@color/white"
    android:elevation="@dimen/one_dp"
    android:padding="@dimen/four_dp">

    <CheckBox
        android:id="@+id/cbIsIncluded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/eight_dp"
        android:layout_marginRight="@dimen/eight_dp"
        android:buttonTint="@color/black"
        android:checked="false"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvSimpleField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/cbIsIncluded"
        android:layout_toLeftOf="@+id/ivActionIcon"
        android:layout_toRightOf="@+id/cbIsIncluded"
        android:layout_toStartOf="@+id/ivActionIcon"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:textSize="@dimen/font_xlarge" />

    <ImageView
        android:id="@+id/ivActionIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/four_dp"
        android:layout_marginStart="@dimen/four_dp" />
</RelativeLayout>